<!-- /sections/related.liquid -->

{%- liquid
  assign animation_anchor = '#RelatedProducts--' | append: section.id
  assign color_scheme = 'color-' | append: section.settings.color_scheme
  assign enable_tabs = section.settings.enable_tabs
  assign heading_alignment = section.settings.heading_alignment
  assign heading_size_class = section.settings.heading_font_size
  assign limit = section.settings.limit
  assign layout_desktop = section.settings.layout_desktop
  assign layout_mobile = section.settings.layout_mobile
  assign grid_columns = section.settings.grid
  assign has_related_products = false
  assign has_recently_products = false
  assign columns_mobile = section.settings.layout_mobile | plus: 0
  assign columns_desktop = grid_columns | plus: 0
  assign columns_medium = 3
  assign columns_small = 2
  assign column_count = limit | at_most: 4

  assign wrapper_tag = 'div'
  if enable_tabs
    assign wrapper_tag = 'tabs-component'
  endif

  if columns_desktop == 2 or columns_desktop == 4
    assign columns_medium = 2
  endif

  if layout_desktop == 'grid'
    assign limit = grid_columns | times: section.settings.rows
    assign column_count = columns_desktop

    if grid_columns == 2 or grid_columns == 4
      assign columns_medium = 2
    endif
  endif
-%}

{%- for block in section.blocks -%}

  {%- if block.type == 'related' -%}
    {%- assign has_related_products = true -%}

    {%- capture related -%}
      <div
        data-related-section
        data-product-id="{{ product.id }}"
        data-limit="{{ limit }}"
        data-layout="{{ layout_desktop }}"
        style="
          --column-count: {{ column_count }};
          --COLUMNS: {{ columns_desktop }};
          --COLUMNS-MEDIUM: {{ columns_medium }};
          --COLUMNS-SMALL: {{ columns_small }};
          --COLUMNS-MOBILE: {{ columns_mobile }};
        "
        {{ block.shopify_attributes }}>
      </div>
    {%- endcapture -%}

    {%- capture related_title -%}
      {{ block.settings.product_recommendations_heading }}
    {%- endcapture -%}
  {%- endif -%}

  {%- if block.type == 'recent' -%}
    {%- assign has_recently_products = true -%}

    {%- capture recent -%}
      {%- render 'products-recently-viewed',
        product: product,
        limit: limit,
        block: block,
        columns_desktop: columns_desktop,
        columns_medium: columns_medium,
        columns_small: columns_small,
        columns_mobile: columns_mobile,
        column_count: column_count,
        layout_desktop: layout_desktop,
        layout_mobile: layout_mobile
      -%}
    {%- endcapture -%}

    {%- capture recent_title -%}
      {{ block.settings.product_recently_heading }}
    {%- endcapture -%}
  {%- endif -%}

{%- endfor -%}

{%- capture style -%}
  --PT: {{ section.settings.padding_top }}px;
  --PB: {{ section.settings.padding_bottom }}px;
{%- endcapture -%}

<script src="{{ 'related-products.js' | asset_url }}" defer></script>

<related-products
  class="related__wrapper {{ color_scheme }} js"
  id="RelatedProducts--{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-section-type="related"
  style="{{ style }}"
>
  {%- if has_related_products or has_recently_products -%}
    <{{ wrapper_tag }} class="tabs-wrapper related__products section-padding">

      {%- if enable_tabs -%}
        <div class="tabs__head">
          <ul class="tabs {{ heading_alignment }}">
            {%- if related -%}
              <li class="tab-link current" data-tab="0">
                <span>{{ related_title }}</span>
              </li>
            {%- endif -%}

            {%- if recent -%}
              <li class="tab-link hidden" data-tab="1" data-recently-viewed-wrapper>
                <span>{{ recent_title }}</span>
              </li>
            {%- endif -%}
          </ul>
        </div>
      {%- endif -%}

      {%- if related -%}
        <div class="tab-content current" data-tab-index="0">
          {{ related }}
        </div>
      {%- endif -%}

      {%- if recent -%}
        <div class="tab-content{% if related == nil %} current{% endif %}" data-tab-index="1">
          {{ recent }}
        </div>
      {%- endif -%}

    </{{ wrapper_tag }}>
  {%- endif -%}
</related-products>

{% schema %}
{
  "name": "Product recommendations",
  "settings": [
    { "type": "checkbox", "id": "enable_tabs", "label": "Enable tabs", "default": true },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Alignment",
      "default": "text-center",
      "options": [
        { "value": "text-left", "label": "Left" },
        { "value": "text-center", "label": "Centered" }
      ]
    },
    { "type": "range", "id": "limit", "min": 1, "max": 10, "step": 1, "label": "Product limit", "default": 4 },
    {
      "type": "select",
      "id": "layout_desktop",
      "label": "Desktop layout",
      "default": "slider",
      "options": [
        { "value": "grid", "label": "Grid" },
        { "value": "slider", "label": "Slider" }
      ]
    },
    {
      "type": "select",
      "id": "layout_mobile",
      "label": "Mobile layout",
      "default": "2",
      "options": [
        { "value": "1", "label": "1 per row" },
        { "value": "2", "label": "2 per row" }
      ]
    },
    { "type": "color_scheme", "id": "color_scheme", "default": "scheme_1", "label": "Color scheme" },
    { "type": "range", "id": "padding_top", "min": 0, "max": 100, "step": 1, "label": "Top", "default": 30 },
    { "type": "range", "id": "padding_bottom", "min": 0, "max": 100, "step": 1, "label": "Bottom", "default": 30 }
  ],
  "blocks": [
    {
      "type": "related",
      "name": "Related products",
      "limit": 1,
      "settings": [
        { "type": "text", "id": "product_recommendations_heading", "label": "Heading", "default": "Related products" }
      ]
    },
    {
      "type": "recent",
      "name": "Recently viewed",
      "limit": 1,
      "settings": [
        { "type": "text", "id": "product_recently_heading", "label": "Heading", "default": "Recently viewed" }
      ]
    }
  ]
}
{% endschema %}
