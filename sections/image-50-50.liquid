{%- liquid
  assign image_left = section.settings.image_left
  assign image_right = section.settings.image_right  
 capture sizes
    if section.settings.width == 'wrapper--full'
      if image_left and image_right
        echo '(min-width: 750px) 50vw, 100vw'
      else
        echo '100vw'
      endif
    else
      if image_left and image_right
        echo '(min-width: 990px) calc((100vw - 100px) / 2), (min-width: 750px) calc((100vw - 60px) / 2), calc(100vw - 32px)'
      else
        echo '(min-width: 990px) calc(100vw - 100px), (min-width: 750px) calc(100vw - 60px), calc(100vw - 32px)'
      endif
    endif
  endcapture
-%}


<div class="img_row_50_50 {{ section.settings.width }}">
<div class="img_50">
 {%- render 'image' image: image_left, sizes: sizes, width: width, widths: widths, show_backfill: false -%}

</div> 

<div class="img_50">
{%- render 'image-hero',
    image_desktop: image_right,            
    sizes: sizes,
    desktop_height: 'auto',
    mobile_height: 'auto'
-%}
</div> 

</div>

{% schema %}
{
  "name": "Image 50 / 50",
  "class": "image-50-50-section",
  "settings": [
    {
      "type": "select",
      "id": "width",
      "label": "Width",
      "default": "wrapper--full",
      "options": [
        {"value": "wrapper--full", "label": "Full width"},
        {"value": "wrapper--full-padded", "label": "Full width padded"}
      ]
    },
    {
      "type": "header",
      "content": "Left image"
    },
    {
      "type": "image_picker",
      "id": "image_left",
      "label": "Primary image"
    },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
      "type": "header",
      "content": "Right image"
    },
    {
      "type": "image_picker",
      "id": "image_right",
      "label": "Primary image"
    },
        {
          "type": "url",
          "id": "link_r",
          "label": "Link"
        }        
],
  "presets": [
    {
       "name": "Image 50 / 50",
      "category": "Custom"
    }
  ]
}
{% endschema %}
