<script>
document.addEventListener("DOMContentLoaded", () => {
  const slider = document.querySelector(".vertical-scroll");
  const bar = document.querySelector(".vertical-progress-fill");
  const inputs = document.querySelectorAll(
    'input[type="radio"][data-index="option1"]'
  );
  const slides = document.querySelectorAll(".product__slide");

  if (!slider || !bar || !slides.length) return;

  /* =========================
     PROGRESS BAR (FIXED)
  ========================= */
  function updateProgress() {
    if (window.innerWidth <= 768) {
      // ðŸ“± Mobile â€“ horizontal
      const max = slider.scrollWidth - slider.clientWidth;
      const progress = max > 0 ? (slider.scrollLeft / max) * 100 : 0;
      bar.style.width = progress + "%";
      bar.style.height = "100%";
    } else {
      // ðŸ–¥ Desktop â€“ vertical
      const max = slider.scrollHeight - slider.clientHeight;
      const progress = max > 0 ? (slider.scrollTop / max) * 100 : 0;
      bar.style.height = progress + "%";
      bar.style.width = "100%";
    }
  }

  slider.addEventListener("scroll", updateProgress);
  window.addEventListener("resize", updateProgress);
  updateProgress(); // initial call

  /* =========================
     VARIANT â†’ IMAGE CHANGE
  ========================= */
  inputs.forEach((input) => {
    input.addEventListener("change", () => {
      const value = input.value.trim().toLowerCase();
      let targetSlide = null;

      slides.forEach((slide) => {
        const id =
          slide.getAttribute("data-id") ||
          slide.getAttribute("data-media-id") ||
          "";

        slide.classList.remove("media--active");
        slide.classList.add("media--hidden");

        if (id.toLowerCase().includes(value)) {
          slide.classList.remove("media--hidden");
          slide.classList.add("media--active");
          targetSlide = slide;
        }
      });

      if (!targetSlide) return;

      if (window.innerWidth <= 768) {
        // ðŸ“± Mobile â†’ horizontal scroll
        slider.scrollTo({
          left: targetSlide.offsetLeft,
          behavior: "smooth"
        });
      } else {
        // ðŸ–¥ Desktop â†’ vertical scroll
        slider.scrollTo({
          top: targetSlide.offsetTop,
          behavior: "smooth"
        });
      }
    });
  });
});





